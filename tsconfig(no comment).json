{
    "compilerOptions": {  
        "plugins": [], 
        "module": "commonjs",
        "target": "es6", 
        "allowJs": true, 
        "checkJs": true, 
        "outDir": "dist", 
        "sourceMap": true, 
        "removeComments": true,        
        "strictNullChecks": true, 
        "noImplicitAny": true,    
        "typeRoots": [
            "node_modules/@types" 
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,       
        "experimentalDecorators": true, 
        "emitDecoratorMetadata": true,        
        "resolveJsonModule": true, 
        "charset": "utf8"

    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}